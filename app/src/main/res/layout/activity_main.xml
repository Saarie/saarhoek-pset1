<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.saar.saarhoek_pset1.MainActivity">

    <CheckBox
        android:text="Mouth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkEyes"
        android:layout_alignStart="@+id/checkEars"
        android:id="@+id/checkMouth" />

    <CheckBox
        android:text="Brows"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkMouth"
        android:layout_alignStart="@+id/checkMouth"
        android:id="@+id/checkBrows" />

    <CheckBox
        android:text="Hat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkBrows"
        android:layout_alignStart="@+id/checkBrows"
        android:id="@+id/checkHat" />

    <CheckBox
        android:text="Moustache"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkNose"
        android:layout_alignStart="@+id/checkNose"
        android:id="@+id/checkMoustache" />

    <CheckBox
        android:text="Glasses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkMoustache"
        android:layout_alignStart="@+id/checkMoustache"
        android:id="@+id/checkGlasses" />

    <CheckBox
        android:text="Nose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkNose"
        android:layout_below="@+id/checkEyes"
        android:layout_alignStart="@+id/checkEyes" />

    <CheckBox
        android:text="Arms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkArms"
        android:layout_above="@+id/checkEyes"
        android:layout_alignStart="@+id/checkEyes" />

    <CheckBox
        android:text="Shoes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkShoes"
        android:layout_above="@+id/checkEars"
        android:layout_alignEnd="@+id/checkMouth" />

    <CheckBox
        android:text="Ears"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="43dp"
        android:layout_marginBottom="121dp"
        android:id="@+id/checkEars"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:text="Eyes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkEyes"
        android:layout_marginEnd="80dp"
        android:layout_below="@+id/checkShoes"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Mr. Potato Head"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:id="@+id/editText"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
